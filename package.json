{
  "name": "tuktukwan-api",
  "version": "1.0.0",
  "scripts": {
    "server:migrate-up": "DATABASE_URL=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB ./node_modules/node-pg-migrate/bin/node-pg-migrate.js up",
    "server:migrate-down": "DATABASE_URL=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB ./node_modules/node-pg-migrate/bin/node-pg-migrate.js down",
    "migrate_up": "DATABASE_URL=postgres://$(grep POSTGRES_USER .env.local | cut -d '=' -f2):$(grep POSTGRES_PASSWORD .env.local | cut -d '=' -f2)@localhost:$(grep POSTGRES_PORT .env | cut -d '=' -f2)/$(grep POSTGRES_DB .env | cut -d '=' -f2) node-pg-migrate up",
    "migrate_down": "DATABASE_URL=postgres://$(grep POSTGRES_USER .env.local | cut -d '=' -f2):$(grep POSTGRES_PASSWORD .env.local | cut -d '=' -f2)@localhost:$(grep POSTGRES_PORT .env | cut -d '=' -f2)/$(grep POSTGRES_DB .env | cut -d '=' -f2) node-pg-migrate down",
    "migrate": "./node_modules/node-pg-migrate/bin/node-pg-migrate.js",
    "dev": "docker compose up --build",
    "start": "yarn server:migrate-up && node index.js",
    "backup": "pg_dump --dbname=$(grep POSTGRES_DB .env.local | cut -d '=' -f2) --host=localhost --username=$(grep POSTGRES_USER .env.local | cut -d '=' -f2) --password > $(date +%s).sql",
    "test": "jest --no-cache",
    "build": "tsc"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "down": "^0.2.5",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-generic-session": "^2.3.1",
    "koa-passport": "^6.0.0",
    "koa-redis": "^4.0.1",
    "koa-router": "^12.0.1",
    "migrate": "^2.1.0",
    "node-pg-migrate": "^7.2.2",
    "passport-custom": "^1.1.1",
    "passport-discord": "^0.1.4",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-line": "^0.0.4",
    "passport-line-v2": "^3.0.0",
    "passport-local": "^1.0.0",
    "passport-magic-login": "^1.2.2",
    "passport-microsoft": "^2.1.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-generic-session": "^2.2.4",
    "@types/jest": "^29.5.12",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-redis": "^4.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/koa__cors": "^5.0.0",
    "@types/passport-discord": "^0.1.13",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/passport-microsoft": "^1.0.3",
    "@types/pg": "^8.11.6",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
